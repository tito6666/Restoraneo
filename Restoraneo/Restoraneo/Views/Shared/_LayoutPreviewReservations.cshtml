<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    @{ 
        var user = User.Identity.IsAuthenticated;
    }
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="~/">Restoraneo</a>
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
             </div>
        </div>
    </nav>
    <div class="bodyLayout container body-content">
            @RenderBody()       
	<footer class="footer navbar-fixed-bottom text-center" style="width:70%; margin:0 auto;">
		Copyright © Restoraneo         
	</footer>			
    </div>
	
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/signalr")
    @RenderSection("scripts", required: false)
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--Add script to update the page and send messages.-->
    <script type="text/javascript">

        $(document).ready(function () {

            var now = new Date();
            var day = ("0" + now.getDate()).slice(-2);
            var month = ("0" + (now.getMonth() + 1)).slice(-2);
            var today = now.getFullYear() + "-" + (month) + "-" + (day);
            $('#date').val(today);

        })
    $(function () {
    // Declare a proxy to reference the hub.
    var reservation = $.connection.reservationHub;
    // Create a function that the hub can call to broadcast messages.
    reservation.client.addClientResponse = function (data) {
        $("#reservationModal").modal();
        $("#reservationModalContent").html('<h5 class="text-center">' + data + '</h5>');
        }
    // Start the connection.
    $.connection.hub.start().done(function () {
        $("form#reservationForm").submit(function (event) {
            event.preventDefault();
            if ('@user' == 'False')
                document.location.href = "/Account/Login";

            var id = $('#selRestaurant option:selected').val();
            var numPersons = $('#selPersons option:selected').val();
            var date = $('#date').val();
            var time = $('#selTime option:selected').val();
            var data = {
                RestaurantId: id,
                NumberOfPersons: numPersons,
                DateOfReservation: date,
                TimeOfReservation: time
            };
            $("#reservationModalContent").html('<h5 class="text-center">Pričekajte odgovor restorana...</h5>' +
            '<div class="loader" style="margin: 0 auto;"></div>')
            $("#reservationModal").modal();
            reservation.server.sendClientReservation(data);
        });
    });
});
    </script>
</body>
</html>
